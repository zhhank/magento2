<config>
    <modules>
        <Mage_Backup>
            <version>1.6.0.0</version>
            <active>true</active>
            <codePool>core</codePool>
            <depends>
                <Mage_Core/>
            </depends>
        </Mage_Backup>
    </modules>
    <global>
        <resources>
            <backup_setup>
                <setup>
                    <module>Mage_Backup</module>
                </setup>
            </backup_setup>
        </resources>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Backup>
                    <files>
                        <default>Mage_Backup.csv</default>
                    </files>
                </Mage_Backup>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <system_backup>
                <run>
                    <model>Mage_Backup_Model_Observer::scheduledBackup</model>
                </run>
            </system_backup>
        </jobs>
    </crontab>
</config>
